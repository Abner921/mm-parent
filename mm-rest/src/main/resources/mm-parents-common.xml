<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p" 
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.4.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.4.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.4.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.4.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.4.xsd
       ">
       
    
    <mvc:annotation-driven />

    <context:component-scan base-package="com.ebay.tools.cms" />
    
    <mvc:view-controller path="/" view-name="forward:/index"/>
   
    <!-- When using  <url-pattern>/</url-pattern> in DispatcherServlet of web.xml, this 
        will gurantee map to static resources  -->
    <mvc:default-servlet-handler/>
    
    <!-- Static Mapping -->
<!--     <mvc:resources mapping="/images/**" location="/WEB-INF/images/" /> -->
<!--     <mvc:resources mapping="/css/**" location="/WEB-INF/css/" /> -->
<!--     <mvc:resources mapping="/js/**" location="/WEB-INF/js/" /> -->

    <!-- ========================= View Definition ========================= -->
    <!-- bean name view resolver-->
    <bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0"/>  
    
    <!-- Different View repsonses to Different Client Requests, like /blog/1.json /blog/1.xml -->  
    <bean class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver" p:order="1">  
        <!-- value="true" will igore the support to Accept Header -->
        <!-- Extension to support mimeType's mapping, that is /user.json => application/json -->
        <property name="favorPathExtension" value="false"/>  
        
         <!-- Support some request like: /userinfo/123?format=json -->  
         <property name="favorParameter" value="false"/>  
         
         <!--favorPathExtension worked only when favorParameter is "true"  -->
         <property name="mediaTypes">  
            <map>  
<!--                <entry key="wml" value="text/vnd.wap.wml"/>-->
<!--                <entry key="vnd" value="application/vnd.wap.xhtml+xml"/>-->
<!--                <entry key="xhtml" value="application/xhtml+xml"/>-->
                <entry key="html" value="*"/>
            </map>  
         </property>  
         <property name="viewResolvers">  
             <list>  
                <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
                    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
                    <property name="contentType" value="text/html"/>
                    <property name="prefix" value="/WEB-INF/jsp/"/>
                    <property name="suffix" value=".jsp"/>
                </bean>
            </list>  
          </property>  
        <!-- We can configure Not Found url here
        <property name="defaultViews">
            <list>  
                 <bean class="org.springframework.web.servlet.view.JstlView" p:url="/notfound"/>  
            </list>  
        </property>  --> 
    </bean>  
 

    <!-- Default view resolver will be used if the upper reslove unaviable(the default format is html) -->
    <bean id="defaultViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver" p:order="3">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="contentType" value="text/html"/>        
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- json view -->
    <bean id="defaultJsonView" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView"/>
    
    <!-- File Uploading related -->
    <!--one of the properties available;the maximum file size in bytes-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="100000"/>
    </bean>
     
